<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Sale lead</th>
      <th>Product</th>
      <th>Demand</th>
      <th>Connection</th>
      <th>Status</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Time</th>
      <th>Modified time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.customer %></td>
        <td><%= sale.sale_lead_id %></td>
        <td><%= sale.product_id %></td>
        <td><%= sale.demand %></td>
        <td><%= sale.connection %></td>
        <td><%= sale.status_id %></td>
        <td><%= sale.email %></td>
        <td><%= sale.phone %></td>
        <td><%= sale.time %></td>
        <td><%= sale.modified_time %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

